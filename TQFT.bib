}

@misc{kaidi2023SymmetryTFTsNonInvertible,
  title = {Symmetry {{TFTs}} for {{Non-Invertible Defects}}},
  author = {Kaidi, Justin and Ohmori, Kantaro and Zheng, Yunqin},
  year = {2023},
  month = oct,
  number = {arXiv:2209.11062},
  eprint = {2209.11062},
  primaryclass = {cond-mat, physics:hep-th},
  publisher = {{arXiv}},
  url = {http://arxiv.org/abs/2209.11062},
  urldate = {2023-12-05},
  abstract = {Given any symmetry acting on a \$d\$-dimensional quantum field theory, there is an associated \$(d+1)\$-dimensional topological field theory known as the Symmetry TFT (SymTFT). The SymTFT is useful for decoupling the universal quantities of quantum field theories, such as their generalized global symmetries and 't Hooft anomalies, from their dynamics. In this work, we explore the SymTFT for theories with Kramers-Wannier-like duality symmetry in both \$(1+1)\$d and \$(3+1)\$d quantum field theories. After constructing the SymTFT, we use it to reproduce the non-invertible fusion rules of duality defects, and along the way we generalize the concept of duality defects to {\textbackslash}textit\{higher\} duality defects. We also apply the SymTFT to the problem of distinguishing intrinsically versus non-intrinsically non-invertible duality defects in \$(1+1)\$d.},
  archiveprefix = {arxiv},
  language = {en}
}

@article{kapustin2014CouplingQFTTQFT,
